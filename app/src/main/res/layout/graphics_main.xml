<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context="ua.cn.sandi.wv2app01.GraphActivity">

    <ProgressBar
        android:id="@+id/pbCount"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_blue_dark" />


    <Button
        android:id="@+id/button_changelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_brk"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/button_brk"
        android:text="Change Layout"
        android:textAlignment="center"
        tools:ignore="UnknownIdInLayout" />

    <ImageView
        android:id="@+id/myImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/pbCount"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_toLeftOf="@+id/button_left"
        android:layout_toStartOf="@+id/button_left"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/myActionView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/pbCount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/button_left"
        android:layout_toStartOf="@+id/button_left"
        app:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/button_bip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_left"
        android:layout_toEndOf="@+id/myImageView"
        android:layout_toRightOf="@+id/myImageView"
        android:text="Bip" />

    <Button
        android:id="@+id/button_brk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_spdup"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Break"
        android:textAlignment="center"
        tools:ignore="UnknownIdInLayout" />


    <Button
        android:id="@+id/button_spdup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_bip"
        android:layout_alignBottom="@+id/button_bip"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Accel"
        android:textAlignment="center"
        tools:ignore="UnknownIdInLayout" />

    <Button
        android:id="@+id/button_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_right"
        android:layout_alignBottom="@+id/button_right"
        android:layout_toLeftOf="@+id/button_right"
        android:layout_toStartOf="@+id/button_right"
        android:text="left" />

    <Button
        android:id="@+id/button_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_action01"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="right" />

    <Button
        android:id="@+id/button_spddown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_action01"
        android:layout_alignBottom="@+id/button_action01"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Deccel"
        android:textAlignment="center"
        tools:ignore="UnknownIdInLayout" />

    <Button
        android:id="@+id/button_action01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pbCount"
        android:layout_toEndOf="@+id/myImageView"
        android:layout_toRightOf="@+id/myImageView"
        android:text="action" />


</RelativeLayout>